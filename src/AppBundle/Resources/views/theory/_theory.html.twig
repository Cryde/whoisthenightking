<div class="row">
    <div class="col-lg-4 mb-3">
        <img class="img-fluid rounded-circle align-middle" src="{{ asset('img/king/' ~ theory.character.slug ~ '.jpg') }}"/>
    </div>
    <div class="col-lg-8">
        <h2>I think it is {{ theory.character.name }}</h2>
        <p class="mt-4">
            Because ...
        </p>
        <p class="font-italic">
            {{ theory.content | nl2br }}
        </p>
        {% if theory.author %}
            <p class="text-right">- {{ theory.author }}</p>
        {% endif %}
    </div>
</div>